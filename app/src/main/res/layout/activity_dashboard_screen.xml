<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B4E4E1E1"
    tools:context=".DashboardScreen">


    <RelativeLayout
        android:id="@+id/topLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:background="@color/Dark_Orange"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Main Menu"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_centerInParent="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            />

        <ImageView
            android:id="@+id/img_logout"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:src="@drawable/logout" />



    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/sliderTextLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/topLayout"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        android:layout_marginTop="30dp"
        >


        <TextView
            android:id="@+id/dashText1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:fontFamily="sans-serif-black"
            android:padding="10dp"
            android:paddingBottom="5dp"
            android:textAlignment="center"
            android:text="IOT Based Smart Classroom Environmental Monitoring and Automation"
            android:textColor="@color/Dark_Orange"
            android:textSize="15sp" />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="5dp"

            android:layout_below="@+id/dashText1"
            android:background="@color/Dark_Orange"
            />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/sliderTextLayout"

        >

       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="20dp"


           >

           <LinearLayout
               android:id="@+id/firstRowLayout"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:weightSum="2"
               >
               <androidx.cardview.widget.CardView
                   android:id="@+id/cardTemperature"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   app:cardElevation="5dp"
                   android:paddingTop="20dp"
                   android:paddingRight="10dp"
                   android:paddingLeft="10dp"
                   android:paddingBottom="10dp"
                   android:layout_marginTop="10dp"
                   android:layout_marginStart="20dp"
                   android:layout_marginEnd="10dp"
                   app:cardCornerRadius="12dp"
                   android:layout_weight="1"
                   >

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:orientation="vertical"
                       >
                       <ImageView
                           android:layout_width="50dp"
                           android:layout_height="50dp"
                           android:layout_gravity="center"
                           android:layout_marginTop="10dp"
                           android:src="@drawable/temperature"
                           />

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="Classroom Student Info"
                           android:textAlignment="center"
                           android:layout_gravity="center"
                           android:padding="10dp"
                           android:textColor="@color/Dark_Orange"
                           android:textStyle="bold"
                           android:layout_weight="1"
                           android:textSize="16sp"
                           />
                   </LinearLayout>


               </androidx.cardview.widget.CardView>

               <androidx.cardview.widget.CardView
                   android:id="@+id/cardSolids"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   app:cardElevation="5dp"
                   android:paddingTop="10dp"
                   android:paddingRight="10dp"
                   android:paddingLeft="10dp"
                   android:paddingBottom="10dp"
                   android:layout_marginTop="10dp"
                   android:layout_marginStart="10dp"
                  android:layout_marginEnd="20dp"
                   app:cardCornerRadius="12dp"
                   android:layout_weight="1"
                   >

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:orientation="vertical"
                       >

                       <ImageView
                           android:layout_width="50dp"
                           android:layout_height="50dp"
                           android:layout_gravity="center"
                           android:layout_marginTop="10dp"
                           android:src="@drawable/liquid"
                           />

                       <TextView
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:text="Classroom Environemnt Temperature"
                           android:textAlignment="center"
                           android:layout_gravity="center"
                           android:padding="10dp"
                           android:textColor="@color/Dark_Orange"
                           android:textStyle="bold"
                           android:layout_weight="1"
                           android:textSize="16sp"
                           />
                   </LinearLayout>





               </androidx.cardview.widget.CardView>


           </LinearLayout>

           <LinearLayout
               android:id="@+id/secondLayout"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_below="@+id/firstRowLayout"
               android:layout_marginTop="20dp"
               android:weightSum="2"
               >
               <androidx.cardview.widget.CardView
                   android:id="@+id/cardTubidity"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   app:cardElevation="5dp"
                   android:paddingTop="20dp"
                   android:paddingRight="10dp"
                   android:paddingLeft="10dp"
                   android:paddingBottom="10dp"
                   android:layout_marginTop="10dp"
                   android:layout_marginStart="20dp"
                   android:layout_marginEnd="10dp"
                   app:cardCornerRadius="12dp"
                   android:visibility="visible"
                   android:layout_weight="1"
                   >

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:orientation="vertical"
                       >
                       <ImageView
                           android:layout_width="50dp"
                           android:layout_height="50dp"
                           android:layout_gravity="center"
                           android:layout_marginTop="10dp"
                           android:src="@drawable/turbidity"
                           />

                       <TextView
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:text="Classroom Air Monitering"
                           android:textAlignment="center"
                           android:layout_gravity="center"
                           android:padding="10dp"
                           android:textColor="@color/Dark_Orange"
                           android:textStyle="bold"
                           android:textSize="16sp"
                           />
                   </LinearLayout>


               </androidx.cardview.widget.CardView>

               <androidx.cardview.widget.CardView
                   android:id="@+id/cardPHSensor"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   app:cardElevation="5dp"
                   android:paddingTop="20dp"
                   android:paddingRight="10dp"
                   android:paddingLeft="10dp"
                   android:paddingBottom="10dp"
                   android:layout_marginTop="10dp"
                   android:layout_marginStart="10dp"
                   android:layout_marginEnd="20dp"
                   app:cardCornerRadius="12dp"
                   android:layout_weight="1"
                   >

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:orientation="vertical"
                       android:visibility="visible"
                       >

                       <ImageView
                           android:layout_width="50dp"
                           android:layout_height="50dp"
                           android:layout_gravity="center"
                           android:layout_marginTop="10dp"
                           android:src="@drawable/hydrogen"
                           />

                       <TextView
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:text="Classroom Door Control"
                           android:textAlignment="center"
                           android:layout_gravity="center"
                           android:padding="10dp"
                           android:textColor="@color/Dark_Orange"
                           android:textStyle="bold"
                           android:textSize="16sp"
                           />
                   </LinearLayout>





               </androidx.cardview.widget.CardView>


           </LinearLayout>

           <LinearLayout
               android:id="@+id/ll_bott"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_below="@+id/secondLayout"
               android:layout_marginTop="20dp"
               android:weightSum="2"

               >
               <androidx.cardview.widget.CardView
                   android:id="@+id/cardWater"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   app:cardElevation="5dp"
                   android:paddingTop="20dp"
                   android:paddingRight="10dp"
                   android:paddingLeft="10dp"
                   android:paddingBottom="10dp"
                   android:layout_marginTop="10dp"
                   android:layout_marginStart="20dp"
                   android:layout_marginEnd="10dp"
                   app:cardCornerRadius="12dp"
                   android:layout_weight="1"
                   >

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:orientation="vertical"
                       >
                       <ImageView
                           android:layout_width="50dp"
                           android:layout_height="50dp"
                           android:layout_gravity="center"
                           android:layout_marginTop="10dp"
                           android:src="@drawable/drops"
                           />

                       <TextView
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:text="Classroom Light Info"
                           android:textAlignment="center"
                           android:layout_gravity="center"
                           android:padding="10dp"
                           android:textColor="@color/Dark_Orange"
                           android:textStyle="bold"
                           android:textSize="16sp"
                           />
                   </LinearLayout>


               </androidx.cardview.widget.CardView>

               <androidx.cardview.widget.CardView
                   android:id="@+id/tv_environment"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   app:cardElevation="5dp"
                   android:paddingTop="20dp"
                   android:paddingRight="10dp"
                   android:paddingLeft="10dp"
                   android:paddingBottom="10dp"
                   android:layout_marginTop="10dp"
                   android:layout_marginStart="10dp"
                   android:layout_marginEnd="20dp"
                   app:cardCornerRadius="12dp"
                   android:layout_weight="1"
                   >

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:orientation="vertical"
                       >

                       <ImageView
                           android:layout_width="50dp"
                           android:layout_height="50dp"
                           android:layout_gravity="center"
                           android:layout_marginTop="10dp"
                           android:src="@drawable/history"
                           />

                       <TextView
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:text="Classroom Environment Control"
                           android:textAlignment="center"
                           android:layout_gravity="center"
                           android:padding="10dp"
                           android:textColor="@color/Dark_Orange"
                           android:textStyle="bold"
                           android:textSize="16sp"
                           />
                   </LinearLayout>
               </androidx.cardview.widget.CardView>

           </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:layout_below="@+id/ll_bott"
               android:layout_marginTop="10dp"
               android:weightSum="2"
               >

               <androidx.cardview.widget.CardView
                   android:id="@+id/tv_history"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   app:cardElevation="5dp"
                   android:paddingTop="20dp"
                   android:paddingRight="10dp"
                   android:paddingLeft="10dp"
                   android:paddingBottom="10dp"
                   android:layout_marginTop="10dp"
                   android:layout_marginStart="20dp"
                   android:layout_marginEnd="10dp"
                   app:cardCornerRadius="12dp"
                   android:layout_weight="1"
                   >

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:orientation="vertical"
                       >

                       <ImageView
                           android:layout_width="50dp"
                           android:layout_height="50dp"
                           android:layout_gravity="center"
                           android:layout_marginTop="10dp"
                           android:src="@drawable/history"
                           />

                       <TextView
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:text="History"
                           android:textAlignment="center"
                           android:layout_gravity="center"
                           android:padding="10dp"
                           android:textColor="@color/Dark_Orange"
                           android:textStyle="bold"
                           android:textSize="16sp"
                           />
                   </LinearLayout>
               </androidx.cardview.widget.CardView>

               <androidx.cardview.widget.CardView
                   android:id="@+id/card_delete"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   app:cardElevation="5dp"
                   android:paddingTop="20dp"
                   android:paddingBottom="10dp"
                   android:layout_marginTop="10dp"
                   android:layout_marginStart="10dp"
                   android:layout_marginEnd="10dp"
                   app:cardCornerRadius="12dp"
                   android:layout_weight="1"
                   >

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:orientation="vertical"
                       >
                       <ImageView
                           android:layout_width="50dp"
                           android:layout_height="50dp"
                           android:layout_gravity="center"
                           android:layout_marginTop="10dp"
                           android:src="@drawable/baseline_delete_forever_24"
                           app:tint="@color/Dark_Orange" />

                       <TextView
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:text="Delete History"
                           android:textAlignment="center"
                           android:layout_gravity="center"
                           android:padding="10dp"
                           android:textColor="@color/Dark_Orange"
                           android:textStyle="bold"
                           android:textSize="16sp"
                           />
                   </LinearLayout>


               </androidx.cardview.widget.CardView>

           </LinearLayout>


       </RelativeLayout>


    </ScrollView>

</RelativeLayout>